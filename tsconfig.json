{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "jsx": "react-jsx",
    "paths": {
      "@ecowatch/shared": [
        "libs/shared/src/"
      ],
      "@ecowatch/shared/*": [
        "libs/shared/src/*"
      ],
    }
  },
  "include": [
    "apps/**/*",
    "libs/**/*"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules"
  ],
}